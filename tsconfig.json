{
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "src/test/*.spec.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "declarationMap": false,
    "inlineSources": false,
    "types": [
      "mocha",
      "node"
    ],
    "baseUrl": "./",
    "outDir": "./dist/esm",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "target": "es2020",
    "module": "es2020",
    "lib": [
      "es2020"
    ]
  }
}